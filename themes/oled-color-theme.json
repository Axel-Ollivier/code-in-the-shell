  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#282828", "fontStyle": "italic" }
    },
    {
      "name": "Comment — Documentation",
      "scope": ["comment.block.documentation", "comment.line.documentation"],
      "settings": { "foreground": "#343434", "fontStyle": "italic" }
    },
    {
      "name": "String",
      "scope": ["string", "string.quoted", "string.template"],
      "settings": { "foreground": "#e0e0e0" }
    },
    {
      "name": "String — Escape",
      "scope": ["constant.character.escape", "constant.other.placeholder"],
      "settings": { "foreground": "#ffffff" }
    },
    {
      "name": "String — RegEx",
      "scope": ["string.regexp", "punctuation.definition.string.regexp", "string.regexp.character-class"],
      "settings": { "foreground": "#909090" }
    },
    {
      "name": "String — Template expression punctuation",
      "scope": ["punctuation.definition.template-expression", "punctuation.section.embedded"],
      "settings": { "foreground": "#ffffff" }
    },
    {
      "name": "Numeric Literal",
      "scope": ["constant.numeric", "constant.numeric.integer", "constant.numeric.float", "constant.numeric.hex", "constant.numeric.octal", "constant.numeric.binary"],
      "settings": { "foreground": "#c0c0c0" }
    },
    {
      "name": "Language Constant (true, false, null, undefined)",
      "scope": ["constant.language", "constant.language.boolean", "constant.language.null", "constant.language.undefined"],
      "settings": { "foreground": "#909090" }
    },
    {
      "name": "Other Constant",
      "scope": ["constant.other", "constant.character"],
      "settings": { "foreground": "#b0b0b0" }
    },
    {
      "name": "Variable — All Caps (constant convention)",
      "scope": "variable.other.constant",
      "settings": { "foreground": "#a0a0a0" }
    },
    {
      "name": "Keyword",
      "scope": ["keyword", "keyword.control", "keyword.control.flow"],
      "settings": { "foreground": "#ffffff", "fontStyle": "italic" }
    },
    {
      "name": "Keyword — Operator",
      "scope": ["keyword.operator", "keyword.operator.assignment", "keyword.operator.comparison", "keyword.operator.logical", "keyword.operator.arithmetic"],
      "settings": { "foreground": "#d0d0d0" }
    },
